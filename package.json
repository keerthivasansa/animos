{
  "version": "0.5.5",
  "name": "animos",
  "main": "dist/index.js",
  "license": "CC-BY-NC-ND-4.0",
  "author": {
    "name": "Keerthi Vasan S A",
    "email": "sakeerthi23@gmail.com",
    "url": "https://github.com/Nectres/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nectres/animos.git"
  },
  "description": "Animos is an application to discover and stream Anime with ease",
  "scripts": {
    "svelte:install": "cd svelte-src && npm i",
    "svelte:dev": "cd svelte-src && npm run dev",
    "test": "jest",
    "svelte:build": "cd svelte-src && yarn build",
    "dev": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run svelte:dev\" \"npm run electron:dev\"",
    "electron:start": "tsc && electron dist | pino-pretty",
    "electron:dev": "nodemon",
    "build": "npm run prepublish && tsc && electron-builder",
    "prepare": "npx prisma migrate deploy && npx prisma generate && npm run svelte:install && npm run svelte:build && npx prisma generate && tsc",
    "publish": "electron-builder -p always"
  },
  "build": {
    "appId": "com.keerthivasan.animos",
    "productName": "Animos",
    "publish": [
      {
        "provider": "github",
        "owner": "Nectres",
        "repo": "animos"
      }
    ],
    "asar": true,
    "directories": {
      "output": "out"
    },
    "nsis": {
      "oneClick": false,
      "license": "LICENSE.md",
      "installerIcon": "build/icons/favicon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "dist/**/*",
      "output/**/*"
    ],
    "extraResources": [
      "prisma/cache.db",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "concurrently": "^7.5.0",
    "electron": "^21.2.2",
    "electron-builder": "22.10.3",
    "generate-changelog": "^1.8.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier-plugin-svelte": "^2.8.0",
    "prisma": "^4.6.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "axios": "^1.1.3",
    "cheerio": "^1.0.0-rc.12",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "electron-serve": "^1.1.0",
    "electron-updater": "^5.3.0",
    "fast-xml-parser": "^4.0.11",
    "winston": "^3.8.2"
  }
}
